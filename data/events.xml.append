    <choice req="_tm_infinite_shield" lvl="1" blue="false" hidden="true">
		<text id="_tm_text_menu_infinite_shield_2"/>
		<event load="_TM_OPTION_INVALID"/>
	</choice>
    <!-- Selective Acceleration -->
